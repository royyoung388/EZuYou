<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <selector xmlns:android="http://schemas.android.com/apk/res/android">

            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="#ff6000" />
                    <corners android:radius="50dp" />
                    <size
                        android:width="150dp"
                        android:height="80dp" />
                </shape>

            </item>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#ff8e21" />
                    <corners android:radius="50dp" />
                    <size
                        android:width="150dp"
                        android:height="80dp" />
                </shape>
            </item>

        </selector>
    </item>

    <item
        android:bottom="15dp"
        android:gravity="center"
        android:left="68dp"
        android:right="68dp"
        android:top="15dp">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item
        android:bottom="38dp"
        android:gravity="center"
        android:left="15dp"
        android:right="15dp"
        android:top="38dp">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>