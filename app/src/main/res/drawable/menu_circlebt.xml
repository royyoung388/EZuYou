<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval" >
            <solid android:color="@color/white" />
            <stroke android:width="1px"
                android:color="@color/black"
                android:dashWidth="0dp"
                android:dashGap="0dp" >
            </stroke>
        </shape>
    </item>

    <item android:bottom="3dp" android:right="3dp" android:top="3dp" android:left="3dp">
        <selector xmlns:android="http://schemas.android.com/apk/res/android">

            <item android:state_pressed="true">
                <shape android:shape="oval" >
                    <solid android:color="@color/lightsalmon" />
                    <stroke android:width="1px"
                        android:color="@color/black"
                        android:dashWidth="0dp"
                        android:dashGap="0dp" >
                    </stroke>
                </shape>

            </item>

            <item>
                <shape android:shape="oval" >
                    <solid android:color="@color/darkorange" />
                    <stroke android:width="1px"
                        android:color="@color/black"
                        android:dashWidth="0dp"
                        android:dashGap="0dp" >
                    </stroke>
                </shape>
            </item>

        </selector>
    </item>

    <item android:height="3dp" android:width="50dp" android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <item android:height="50dp" android:width="3dp" android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>


</layer-list>