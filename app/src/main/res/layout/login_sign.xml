<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical">

    <!--<android.support.v7.widget.Toolbar-->
    <!--android:id="@+id/Login_sign_Toolbar"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="?attr/actionBarSize"-->
    <!--android:background="?attr/colorPrimary">-->

    <!--<TextView-->
    <!--android:id="@+id/Login_sign_tiltle"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center"-->
    <!--android:text="注册"-->
    <!--android:textSize="20dp" />-->
    <!--</android.support.v7.widget.Toolbar>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_layout_background"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/Login_sign_name"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/login_sign_input"
                    android:gravity="center"
                    android:hint="account"
                    android:inputType="text"
                    android:lines="1"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/login_input"
                    android:textColorHint="@color/hint" />

                <requestFocus />

                <EditText
                    android:id="@+id/Login_sign_password"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/login_sign_input"
                    android:gravity="center"
                    android:hint="password"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/login_input"
                    android:textColorHint="@color/hint" />

                <EditText
                    android:id="@+id/Login_sign_repassword"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/login_sign_input"
                    android:gravity="center"
                    android:hint="password assured"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/login_input"
                    android:textColorHint="@color/hint" />

                <EditText
                    android:id="@+id/Login_sign_number"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/login_sign_input"
                    android:gravity="center"
                    android:hint="student id"
                    android:inputType="number"
                    android:lines="1"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/login_input"
                    android:textColorHint="@color/hint" />

                <EditText
                    android:id="@+id/Login_sign_school"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/login_sign_input"
                    android:gravity="center"
                    android:hint="所在学校"
                    android:inputType="text"
                    android:lines="1"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/login_input"
                    android:textColorHint="@color/hint" />

                <EditText
                    android:id="@+id/Login_sign_class"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/login_sign_input"
                    android:gravity="center"
                    android:hint="所在学院"
                    android:inputType="text"
                    android:lines="1"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/login_input"
                    android:textColorHint="@color/hint" />


                <RadioGroup
                    android:id="@+id/Login_sign_radiogroup"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="14dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/Login_sign_radio_man"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="男"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/Login_sign_radio_woman"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="女"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                    <!--android:drawableLeft="@drawable/sign_radio_button"-->
                </RadioGroup>

                <Button
                    android:id="@+id/Login_sign_submit"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/login_buttom"
                    android:text="Sign up"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/login_sign_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="返回登录"
                    android:textColor="#ff6200"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>