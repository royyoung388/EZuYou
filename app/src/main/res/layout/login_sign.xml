<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6">

    <android.support.v7.widget.Toolbar
        android:layout_alignParentTop="true"
        android:id="@+id/Login_sign_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/Login_sign_tiltle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:text="注册"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/Login_sign_layout_repassword"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center">

        <TextView
            android:id="@+id/Login_sign_text_repwd"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:gravity="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/Login_sign_repassword"
            android:inputType="numberPassword"
            android:selectAllOnFocus="true"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请再次输入您的密码"
            android:textColorHint="#95A1AA"
            android:layout_gravity="bottom"
            android:singleLine="true"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Login_sign_layout_password"
        android:layout_above="@id/Login_sign_layout_repassword"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center">

        <TextView
            android:id="@+id/Login_sign_text_pwd"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="密码"
            android:gravity="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/Login_sign_password"
            android:inputType="numberPassword"
            android:selectAllOnFocus="true"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请输入您的密码"
            android:textColorHint="#95A1AA"
            android:layout_gravity="bottom"
            android:singleLine="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_above="@id/Login_sign_layout_password"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center">

        <TextView
            android:id="@+id/Login_sign_text_name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:gravity="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/Login_sign_name"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请输入您的学号"
            android:textColorHint="#95A1AA"
            android:layout_gravity="bottom"
            android:singleLine="true"/>
    </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:background="#FFD700"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="100dp"
        android:padding="10dp"
        android:id="@+id/Login_sign_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="注册"
        android:textSize="30dp"/>

</RelativeLayout>