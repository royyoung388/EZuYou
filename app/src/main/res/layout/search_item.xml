<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.you.ezuyou.utils.CircleImageView
        android:id="@+id/search_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:src="@drawable/image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_item_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:text="1231231231"
            android:textColor="@color/commontext"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/search_item_detil"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:lines="2"
            android:text="2hå“ˆdsfsdf56165"
            android:textColor="@color/detil"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>