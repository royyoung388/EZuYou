<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.you.ezuyou.Menu.Menu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/bt_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/shadow_align_top" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/menu1"
                    style="@style/menu"
                    android:src="@drawable/menu_home" />

                <ImageView
                    android:id="@+id/menu2"
                    style="@style/menu"
                    android:src="@drawable/menu_strategy" />

                <ImageView
                    android:id="@+id/menu3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/white"
                    android:src="@drawable/menu_icon_deploy" />

                <ImageView
                    android:id="@+id/menu4"
                    style="@style/menu"
                    android:src="@drawable/menu_chat" />

                <ImageView
                    android:id="@+id/menu5"
                    style="@style/menu"
                    android:src="@drawable/menu_my" />
            </LinearLayout>
            =
        </LinearLayout>

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bt_menu"
            android:layout_alignParentTop="true" />
    </RelativeLayout>
</LinearLayout>
