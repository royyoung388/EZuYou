    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/bt_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/shadow_align_top" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/menu1"
                    style="@style/menu"
                    android:src="@drawable/menu_icon_home" />

                <ImageView
                    android:id="@+id/menu2"
                    style="@style/menu"
                    android:src="@drawable/menu_icon_strategy" />

                <TextView
                    android:id="@+id/menu3"
                    style="@style/menu"
                    android:text="" />

                <ImageView
                    android:id="@+id/menu4"
                    style="@style/menu"
                    android:src="@drawable/menu_icon_chat" />

                <ImageView
                    android:id="@+id/menu5"
                    style="@style/menu"
                    android:src="@drawable/menu_icon_my" />
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/menu3_bt"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@id/bt_menu"
            android:layout_centerInParent="true"
            android:layout_marginBottom="-40dp"
            android:background="@drawable/menu_circlebt" />

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bt_menu"
            android:layout_alignParentTop="true" />
    </RelativeLayout>
</LinearLayout>
